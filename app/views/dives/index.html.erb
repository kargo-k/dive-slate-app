<h2><%=@user.username%>'s Dives</h2>
<%= link_to "Log a New Dive", dives_path%>

<ol>
    <% @user.dives.each do |dive| %>
        <li><b><%= link_to dive.divesite.name, show_dive_path(dive) %>: </b>
            <%=dive.description%>
        </li>
    <% end %>
</ol>

<%= link_to "View my profile", user_path(@user)%>


<%= link_to "Logout", logout_path, method: :delete %>