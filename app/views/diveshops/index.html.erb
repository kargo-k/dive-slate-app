<%= stylesheet_link_tag"application.css"%>
<!DOCTYPE html>
<html>
    <head>
        <title>Dive Slate</title>
    </head>

    <body>
          <div class="content">
        <!-- top-bar start -->
        <header>
            <h1>Dive Slate</h1>

           <div id="topbarmenu">
            <%= link_to "Dashboard", dives_path, {class: "button"} %>
            <%= link_to @user.username, user_path(@user), {class: "button"}  %>
            <label class="button"><%= link_to "Logout", logout_path, method: :delete %></label>
           </div>
        </header>
        <!-- top-bar end -->

        <!-- main area start -->
        <div id="main">
            <h2>All Dive Shops</h2>
            <ul>
                <% @diveshops.each do |diveshop| %>
                    <li><%= link_to diveshop.name, diveshop %></li>
                <% end %>
            </ul>
        </div>
      </div>
    </body>
</html>
