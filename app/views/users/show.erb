<%= stylesheet_link_tag"application.css"%>
<!DOCTYPE html>
<html>
    <head>
        <title>Dive Slate</title>
    </head>

    <body>
        <!-- top-bar start -->
        <div id="header">
            <strong>Dive Slate</strong>
        </div>

        <div id="topbarmenu">
            <%= link_to "Dashboard", dives_path %>
            <%= link_to @user.username, user_path(@user) %>
            <%= link_to "Logout", logout_path, method: :delete %>
        </div>
        <!-- top-bar end -->

        <!-- main area start -->
        <div id="main">
            <h2>🐟 <%=@user.username%> 🐟</h2>
            <h4> <%=@user.name%> </h4>
            <h4>Highest Certification: <%=@user.certification%></h4>
            <h4>Age: <%=@user.age%></h4>
            <h4>Country: <%=@user.country%></h4>
            <h4>Total Dives: <%=@user.total_dives%></h4>

            <div class="button">
                <%= link_to "Edit Profile", edit_user_path(@user) %>
            </div>

            <div class="button">
                <%= link_to "Delete Profile", confirm_delete_path %>
            </div>

        </div>
    </body>
</html>