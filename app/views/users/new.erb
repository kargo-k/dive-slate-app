<h3>🐠 Create your Dive Slate profile: 🐠</h3>

<%=form_for @user do |f| %>
<%=f.label :username %>
<%=f.text_field :username %>
<br>
<%=f.label :password %>
<%=f.text_field :password %>
<br>
<%=f.label :name %>
<%=f.text_field :name %>
<br>
<%=f.label :certification %>
<%=f.text_field :certification %>
<br>
<%=f.label :age %>
<%=f.text_field :age %>
<br>
<%=f.label :country %>
<%=f.text_field :country %>
<br>
<%=f.label :total_dives %>
<%=f.text_field :total_dives %>
<br>
<%=f.submit%>
<%end%>
