<%= stylesheet_link_tag"application.css"%>
<!DOCTYPE html>
<html>
    <head>
        <title>Dive Slate</title>
    </head>

    <body>
          <div class="content">
        <!-- top-bar start -->
        <header>
            <h1>Dive Slate</h1>

           <div id="topbarmenu">
            <%= link_to "Dashboard", dives_path, {class: "button"} %>
            <%= link_to @user.username, user_path(@user), {class: "button"}  %>
            <label class="button"><%= link_to "Logout", logout_path, method: :delete %></label>
           </div>
        </header>
        <!-- top-bar end -->

        <div id="single">
            <h2>Explore Marine Life</h2>

            <ul>
                <% @marineanimals.each do |animal| %>
                    <li id="list-entry"><%= link_to animal.name, marineanimal_path(animal) %></li>
                <% end %>
            </ul>

            <div class="button"><%= link_to "Add New Marine Life", new_marineanimal_path%></div>
        </div>
      </div>
    </body>
</html>
