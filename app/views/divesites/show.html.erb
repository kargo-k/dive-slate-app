<%= stylesheet_link_tag"application.css"%>
<!DOCTYPE html>
<html>
    <head>
        <title>Dive Slate</title>
    </head>

    <body>
      <div class="divesite">
        <!-- top-bar start -->
        <header">
            <strong>Dive Slate</strong>

            <div id="topbarmenu">
            <%= link_to "Dashboard", dives_path %>
            <%= link_to @user.username, user_path(@user) %>
            <%= link_to "Logout", logout_path, method: :delete %>
            </div>

        </header>
        <!-- top-bar end -->

        <!-- main area start -->
        <div id="main">
            <h2><%= @divesite.name %></h2>
            <h4>Latitude: <%= @divesite.latitude %></h4>
            <h4>Longitude: <%= @divesite.longitude %></h4>

            <h4>Number of Dives Completed Here: <%= @divesite.dives.count %></h4>

            <div class="button">
                <%= link_to "See all Divesites", divesites_path %>
            </div>

         </div>
      </div>
    </body>
</html>
