<%= stylesheet_link_tag"application.css"%>
<!DOCTYPE html>
<html>
    <head>
        <title>Dive Slate</title>
    </head>

    <body>
    <div class="divesite">
        <!-- top-bar start -->
        <header>
            <strong>Dive Slate</strong>

        <div id="topbarmenu">
            <%= link_to "Dashboard", dives_path %>
            <%= link_to @user.username, user_path(@user) %>
            <%= link_to "Logout", logout_path, method: :delete %>
        </div>
        </header>
        <!-- top-bar end -->

        <!-- main area start -->
        <div id="main">
            <h2>All Dive Sites</h2>
            <ol>
                <% @divesites.each do |divesite| %>
                    <li><%= link_to divesite.name, divesite %></li>
                <% end %>
            </ol>

            <div class="button">
                <%= link_to "Sort by Popularity", sorted_divesites_path, method: :post %>
            </div>
        </div>
      </div>
    </body>
</html>
