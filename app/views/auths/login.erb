    <body>

        <h2>Dive Slate</h2>

            <div class="form">
                <%=form_for(:auth, url: login_path) do |f| %>
                    <%=f.label :username %>
                    <%=f.text_field :username %>

                    <br> 

                <%=f.label :password %>
