        <div class="error" style="color:red">
        <% if flash[:error] %>
            <%= flash[:error] %>
        <% end %>
        </div>

        <br><br><br><br>

        <div id="signup">
            <%= link_to "New User? Sign up here!", signup_path %>
        </div>
    </body>
